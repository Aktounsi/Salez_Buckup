<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <!--  Gradient Bg for listrow -->
        <shape android:shape="rectangle" >
            <gradient
                android:startColor="#411899"
                android:centerColor="#411889"
                android:endColor="#411879"
                android:angle="270" />
        </shape>
    </item>
    <item android:state_focused="true">
        <!--  Gradient Bg for listrow -->
        <shape android:shape="rectangle" >
            <gradient
                android:startColor="#310889"
                android:centerColor="#310879"
                android:endColor="#24064B"
                android:angle="270" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <!--  Gradient Bg for listrow -->
        <shape android:shape="rectangle" >
            <gradient
                android:startColor="#80310889"
                android:centerColor="#80310879"
                android:endColor="#8024064B"
                android:angle="270" />
        </shape>
    </item>
    <item android:state_enabled="true" >
        <!--  Gradient Bg for listrow -->
        <shape android:shape="rectangle" >
            <gradient
                android:startColor="#310889"
                android:centerColor="#310879"
                android:endColor="#24064B"
                android:angle="270" />
        </shape>
    </item>

</selector>