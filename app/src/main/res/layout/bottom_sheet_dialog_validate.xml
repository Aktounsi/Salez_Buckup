<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bottom_sheet_dialog_bg">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voulez-vous vraiement enregistrer les modifications"
        android:layout_gravity="center"
        android:textSize="22sp"
        android:layout_marginBottom="20dp"/>

    <CheckBox android:id="@+id/factureCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Imprimer la facture"
        android:textColor="@drawable/radio_selector"
        android:buttonTint="@drawable/radio_selector"
        android:checked="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/button2"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valider"
        android:background="@drawable/button_valider_bg"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"/>
</LinearLayout>